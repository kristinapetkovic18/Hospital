<Window x:Class="HospitalProject.View.PatientView.View.MakeNoteView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HospitalProject.View.PatientView.View"
        mc:Ignorable="d"
        Title="MakeNoteView" Height="450" Width="800">
    <Grid>


        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <TextBox Height="200" Width="500" BorderThickness="3"
                 Text="{Binding NoteText}"/>

        <Button Grid.Row="1" Height="40" Width="250" Content="Make Note"
                FontSize="25"
                Command="{Binding ConfirmNoteCommand}"/>

    </Grid>
</Window>
